<?xml version='1.0' encoding='utf-8'?>
<widget id="com.hatiolab.thingsfactoryontv" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ThingsFactoryOnTV</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <icon src="www/img/icon-192x192.png" />
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-webserver" spec="~1.1.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.4" />
    <plugin name="cordova-plugin-autostart" spec="^2.3.0" />
    <plugin name="cordova-plugin-zeroconf" spec="^1.4.0" />
    <plugin name="cordova-plugin-background-mode" spec="@red-mobile/cordova-plugin-background-mode@~0.7.2" />
    <plugin name="cordova-plugin-networkinterface" spec="^2.0.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="^3.1.0" />
</widget>
